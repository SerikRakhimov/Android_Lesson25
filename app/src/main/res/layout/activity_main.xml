<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/zoom_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop ="50dp"
        android:src="@drawable/plus"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/zoom_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/zoom_plus"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="120dp"
        android:src="@drawable/minus"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bearing_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop ="210dp"
        android:src="@drawable/plus"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bearing_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bearing_plus"
        android:layout_alignParentRight="true"
        android:layout_marginTop="280dp"
        android:src="@drawable/minus" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/tilt_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/plus" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/tilt_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/minus" />
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>